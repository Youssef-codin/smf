# Top-level EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java source files
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# XML (Spring configs, pom.xml, etc.)
[*.xml]
indent_style = space
indent_size = 4

# YAML (application.yml, application-dev.yml, etc.)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Markdown (README, docs)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

